        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="79,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="123" Grid.Row="1"/>
        <Label x:Name="label1" Content="STATUS:" HorizontalAlignment="Left" Margin="302,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Left" Margin="302,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="123" Grid.Row="1"/>
        <Label x:Name="label2" Content="SERIAL COMM" HorizontalAlignment="Left" Margin="212,27,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
